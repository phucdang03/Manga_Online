    <script>
              $(document).ready(function () {
                 var user = GetUserData();
                 if (user!==null){
                     $("#tab-history").show();
                     var current1 = $("#tab-history").attr('href');
                     current1 += user.userId
                     $("#tab-history").attr('href', current1);

                     $("#tab-follow").show();                    
                     var curent = $("#tab-follow").attr('href');
                     curent += user.userId
                     $("#tab-follow").attr('href', curent);

                     $("#tab-search").show();
                     
                     var current = $("#profile").attr('href');
                     current += user.userId;
                     $("#profile").attr('href', current);
                     
                 // Fix avatar URL construction
                 if(user.avartar != null && user.avartar.trim() !== '') {
                     $("#avatar").attr('src', '/image/manga-image/' + user.avartar);
                 } else {
                     $("#avatar").attr('src', '/image/manga-image/avatar-default.jpg');
                 }
                 } else {
                     $("#btn-login").show();
                     $("#btn-user").hide();
                 }

                 $("#search-button").on("click",() => {
                    var data = $("#search-input").val();
                    window.location.href = "/public/search?query=" + data;
                });
            });

            function GetUserData() {
                try {
                    const user = localStorage.getItem("USER_DATA");
                    return user ? JSON.parse(user) : null;
                } catch (error) {
                    console.error("Error parsing user data:", error);
                    return null;
                }
            }
            
            // Global variable for API URL
            window.urlServiceManga = "http://localhost:5098";
            
            // Initialize when DOM is ready
            $(document).ready(function() {
                console.log('üöÄ Initializing global page scroll detection for chapter reading...');
                
                // Simple, robust global scroll handler
                let lastScrollTop = 0;
                let isHeaderVisible = true;
                const $header = $('.header');
                
                // Ensure header exists
                if ($header.length === 0) {
                    console.error('‚ùå Header not found');
                    return;
                }
                
                console.log('‚úÖ Header element found');
                
                // Make header fixed and visible initially
                $header.css({
                    'position': 'fixed',
                    'top': '0',
                    'left': '0', 
                    'right': '0',
                    'z-index': '999',
                    'transition': 'transform 0.3s ease, opacity 0.3s ease',
                    'transform': 'translateY(0)',
                    'opacity': '1'
                });
                
                // Add body padding to compensate for fixed header
                $('body').css('padding-top', '93px');
                
                function showHeader(reason) {
                    if (!isHeaderVisible) {
                        $header.css({
                            'transform': 'translateY(0)',
                            'opacity': '1'
                        });
                        isHeaderVisible = true;
                        console.log('üì± Header shown:', reason);
                    }
                }
                
                function hideHeader(reason) {
                    if (isHeaderVisible) {
                        $header.css({
                            'transform': 'translateY(-100%)', 
                            'opacity': '0'
                        });
                        isHeaderVisible = false;
                        console.log('üì± Header hidden:', reason);
                    }
                }
                
                // MAIN SCROLL HANDLER - Binds to WINDOW for entire page
                $(window).on('scroll', function() {
                    const currentScroll = $(window).scrollTop();
                    const scrollDirection = currentScroll > lastScrollTop ? 'down' : 'up';
                    const scrollDelta = Math.abs(currentScroll - lastScrollTop);
                    
                    // Ignore tiny movements
                    if (scrollDelta < 5) {
                        return;
                    }
                    
                    console.log(`üìä Chapter page scroll: ${currentScroll}px, direction: ${scrollDirection}`);
                    
                    // Show header at top of page
                    if (currentScroll <= 50) {
                        showHeader('at top of chapter page');
                    }
                    // Hide header when scrolling down
                    else if (scrollDirection === 'down' && currentScroll > 100) {
                        hideHeader('scrolling down on chapter');
                    }
                    // Show header when scrolling up
                    else if (scrollDirection === 'up' && currentScroll > 50) {
                        showHeader('scrolling up on chapter');
                    }
                    
                    lastScrollTop = currentScroll;
                });
                
                // Additional binding for document scroll (backup)
                $(document).on('scroll', function() {
                    console.log('üìä Document scroll detected on chapter page');
                    $(window).trigger('scroll');
                });
                
                console.log('‚úÖ Global chapter page scroll handler attached to WINDOW');
                console.log('üì± Try scrolling anywhere on the chapter page now!');
                
                // Test initial position
                const initialScroll = $(window).scrollTop();
                console.log(`üìç Initial scroll position on chapter: ${initialScroll}px`);
                
                if (initialScroll > 100) {
                    hideHeader('initial chapter page position');
                }
            });
    </script>


