    <!-- Fallback for tracking protection issues -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Check if FontAwesome loaded after 3 seconds
            setTimeout(function() {
                var testElement = document.createElement('i');
                testElement.className = 'fas fa-home';
                testElement.style.position = 'absolute';
                testElement.style.left = '-9999px';
                testElement.style.fontSize = '16px';
                document.body.appendChild(testElement);
                
                var computedStyle = window.getComputedStyle(testElement, ':before');
                var content = computedStyle.getPropertyValue('content');
                var isLoaded = content && content !== 'none' && content !== '\"\"';
                
                document.body.removeChild(testElement);
                
                if (!isLoaded) {
                    console.warn('Font Awesome blocked by tracking protection. Icons may not display correctly.');
                    // You could load a local backup here or show a message to users
                } else {
                    console.log('‚úì Font Awesome loaded successfully');
                }
            }, 3000);
        });
